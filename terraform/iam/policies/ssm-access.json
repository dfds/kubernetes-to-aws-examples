{
    "Statement": [
        {
            "Sid": "SSMParameterStoreAccess",
            "Action": [
                "tag:GetResources",
                "ssm:GetParameter*",
                "ssm:DescribeParameters"
            ],
            "Effect": "Allow",
            "Resource": [
                %{ for i, param in ssm_parameters ~}
                "${param}"${i < length(ssm_parameters) - 1 ? "," : ""}
                %{ endfor ~}
            ]
        }
    ],
    "Version": "2012-10-17"
}
